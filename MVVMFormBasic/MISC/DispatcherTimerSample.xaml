<UserControl x:Class="MVVMFormBasic.MISC.DispatcherTimerSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFormBasic.MISC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Name="lblTime" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <StackPanel Height="20" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="Button_Click_Start">Start</Button>
            <Button Click="Button_Click_Stop">Stop</Button>
            <Button Click="TurnonGermanTime">German Time</Button>
        </StackPanel>
    </StackPanel>
    
</UserControl>
